@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "UpdateDetails";
    ViewData.TryGetValue("errors", out var errorlist);
    List<IdentityError>
    errors = null;
    if (errorlist is List<IdentityError>)
    {
        errors = errorlist as List<IdentityError>;
    }
}
@model UpdateUser


@if (errors?.Count > 0)
{
    <div class="alert alert-danger" role="alert">
        <ul>
            @foreach (var error in errors)
            {
                <li>
                    @error.Description
                </li>
            }
        </ul>
    </div>
}
<form asp-action="UpdateDetails" method="post">
    <div class="form-group">
        <h2>Update Details for : @User.Identity.Name</h2>
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div>
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" />
    </div>
    <div>
        <label asp-for="CurrentPassword"></label>
        <input asp-for="CurrentPassword" class="form-control" />
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div>
        <div asp-validation-summary="All"></div>
        <input type="submit" class="btn btn-primary btn-block" value="Update" />
    </div>
</form>


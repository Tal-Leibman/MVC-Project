@model Product

<a asp-controller="Home" asp-action="ProductDetails" asp-route-id=@Model.Id>
	<div class="card post-container-mini">
		<div class="card-body bg-light text-center">
			<h5 class="card-header">@Model.Title</h5>

			@await Component.InvokeAsync("ImageDisplay", Model.Images?.ElementAt(0))

			<p class="card-text">@Model.ShortDescription</p>

			<div class="card-footer text-muted">
				Price: @Model.Price
			</div>

			<div class="card-footer text-muted">
				Added by @Model.SellerId@*.UserName*@ at @Model.Date.ToString("MMMM dd yyyy")
			</div>
		</div>
	</div>
</a>
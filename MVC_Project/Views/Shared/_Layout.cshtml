<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MVC_Project</title>

	<link rel="stylesheet" href="~/vendor-styles/vendor.css" />
	<link rel="stylesheet" href="~/styles/styles.css" />
</head>
<body>
	<nav class="proj-header">
		<a asp-controller="Home" asp-action="Index" class="navbar-brand">Home</a>
		<a asp-controller="Info" asp-action="About" class="navbar-brand">About</a>
		<a asp-controller="Info" asp-action="Faq" class="navbar-brand">FAQ</a>

		@if (ViewBag.User == null)
		{
			<a asp-controller="Account" asp-action="Index" class="navbar-brand">Add Product</a>
			<a asp-controller="Register" asp-action="Index" class="navbar-brand">Register</a>
			<a asp-controller="Login" asp-action="Index" class="navbar-brand">Log In</a>
		}
		else
		{
			<a asp-controller="AddProduct" asp-action="Index" class="navbar-brand">Add Product</a>
			<a asp-controller="Login" asp-action="LogOut" class="navbar-brand">Log Out</a>
		}

	</nav>
	<div class="proj-body-container">
		@RenderBody()
	</div>
</body>
</html>

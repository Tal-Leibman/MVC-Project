@model ProductAddition
@{ ViewData["Title"] = "AddProduct";}

<h2>Add Product</h2>
<form asp-controller="AddPRoduct" asp-action="Index" method="post">
	<div>
		<label asp-for="Title"></label>
		<input asp-for="Title" />
	</div>
	<div>
		<label asp-for="ShortDescription"></label>
		<input asp-for="ShortDescription" />
	</div>
	<div>
		<label asp-for="LongDescription"></label>
		<input asp-for="LongDescription" />
	</div>
	<div>
		<label asp-for="Price"></label>
		<input asp-for="Price" />
	</div>

	<div>
		<label asp-for="Image"></label>
		<input asp-for="Image" />
	</div>

	@*<div asp-validation-summary="All"></div>*@
	<input type="submit" value="Submit" />
</form>